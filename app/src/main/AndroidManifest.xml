<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.e_shop">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logomain"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.EShop"
        android:usesCleartextTraffic="true">
        <activity
            android:name=".screens.SearchActivity"
            android:exported="false"
            android:theme="@style/Theme.EShop.ActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".screens.CategoryActivity"
            android:exported="false"
            android:theme="@style/Theme.EShop.ActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".screens.PaymentActivity"
            android:exported="false"
            android:label="Payment"
            android:theme="@style/Theme.EShop.ActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".screens.CheckoutActivity"
            android:exported="false"
            android:label="Checkout"
            android:theme="@style/Theme.EShop.ActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>
        <activity
            android:name=".screens.CartActivity"
            android:exported="true"
            android:label="Shopping Cart"
            android:theme="@style/Theme.EShop.ActionBar" />
        <activity
            android:name=".screens.SplashScreen"
            android:exported="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".screens.MainActivity"
            android:exported="true"
            android:theme="@style/Theme.MainActivity" />
        <activity
            android:name=".UserProfile"
            android:exported="true" />
        <activity
            android:name=".screens.LoginActivity"
            android:exported="true" />
        <activity
            android:name=".screens.SignUp"
            android:exported="true" />
        <activity
            android:name=".screens.ProductDetailActivity"
            android:exported="true"
            android:theme="@style/Theme.EShop.ActionBar">
            <meta-data
                android:name="android.app.lib_name"
                android:value="" />
        </activity>

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>